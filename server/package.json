{
   "name": "server",
   "version": "1.0.0",
   "description": "",
   "main": "index.js",
   "scripts": {
      "test": "jest --verbose",
      "tjs": "typescript-json-schema 'tsconfig.json' '*' --refs='false' --noExtraProps --required",
      "tjs:auth": "npm run tjs -- --include='src/api/auth/types.ts' --out='src/api/auth/schema.json'",
      "tjs:habits": "npm run tjs -- --include='src/api/habits/types.ts' --out='src/api/habits/schema.json'",
      "dev": "nodemon --ignore api-spec.json --exec node -r @swc-node/register src/index.ts",
      "start": "NODE_ENV=production node dist/index.js",
      "build": "tsc",
      "build:digitalocean": "npm install --production=false && npm run build && npm ci",
      "generate-client": "openapi --input ./api-spec.json --output ../client/src/api",
      "drizzle:introspect": "drizzle-kit introspect:pg --config=./drizzle/drizzle.config.js",
      "drizzle:migrate": "drizzle-kit generate:pg --config=./drizzle/drizzle.config.js"
   },
   "author": "",
   "license": "ISC",
   "dependencies": {
      "@fastify/cookie": "^8.3.0",
      "@fastify/cors": "^8.3.0",
      "@fastify/error": "^3.3.0",
      "@fastify/session": "^10.4.0",
      "@fastify/swagger": "^8.8.0",
      "bcrypt": "^5.1.0",
      "dayjs": "^1.11.9",
      "dotenv": "^16.0.3",
      "drizzle-orm": "^0.27.2",
      "fastify": "^4.19.2",
      "postgres": "^3.3.5"
   },
   "devDependencies": {
      "@swc-node/register": "^1.6.6",
      "@swc/core": "^1.3.69",
      "@types/bcrypt": "^5.0.0",
      "@types/cors": "^2.8.13",
      "@types/node": "^20.1.2",
      "drizzle-kit": "^0.19.5",
      "nodemon": "^2.0.22",
      "openapi-typescript-codegen": "^0.25.0",
      "typescript": "^5.0.4",
      "typescript-json-schema": "^0.59.0"
   }
}
